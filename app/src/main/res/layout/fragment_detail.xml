<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.detail.DetailFragment">


    <ImageView
        android:id="@+id/ImgDetail"
        android:layout_width="374dp"
        android:layout_height="227dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/detalProject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextNamaPro"
        android:layout_width="374dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="@color/BackgrounInput"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgDetail" />

    <TextView
        android:id="@+id/DeskripsiPorject"
        android:layout_width="374dp"
        android:layout_height="252dp"
        android:layout_marginTop="68dp"
        android:background="@color/BackgrounInput"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TextNamaPro" />

    <TextView
        android:id="@+id/CreatorProject"
        android:layout_width="376dp"
        android:layout_height="98dp"
        android:layout_marginTop="270dp"
        android:background="@color/BackgrounInput"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/DeskripsiPorject" />


</androidx.constraintlayout.widget.ConstraintLayout>


