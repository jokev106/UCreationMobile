<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.detail.DetailFragment">


    <ImageView
        android:id="@+id/img_project"
        android:layout_width="374dp"
        android:layout_height="227dp"
        android:foregroundGravity="center"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintCircleRadius="200pt"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#FFFFFF">

            <TextView
                android:id="@+id/JudulProject"
                android:gravity="center"
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:textSize="24dp"
                android:text="Judul Project"
                android:textColor="@color/black"
                android:background="#AAAEFE"

                ></TextView>

        <TextView
            android:id="@+id/DeskripsiProject"
            android:gravity="center"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="24dp"
            android:text="Deskripsi Project"
            android:textColor="@color/black"
            android:background="#AAAEFE"
            ></TextView>

        <TextView
            android:id="@+id/TeamProject"
            android:gravity="center"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="24dp"
            android:text="Team : "
            android:textColor="@color/black"
            android:background="#AAAEFE"
            ></TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


