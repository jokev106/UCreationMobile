<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:cardCornerRadius="20dp"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardBackgroundColor="#a9a9a9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




        <LinearLayout
            android:padding="12dp"
            android:background="@color/design_default_color_primary"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/NamaProject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_bold"
                        android:text="Peoject Name"
                        android:textColor="#ffffff"
                        android:textSize="18dp">

                    </TextView>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_bold"
                android:paddingLeft="0dp"
                android:paddingTop="50dp"
                android:text="Team : "
                android:textColor="#ffffff"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/NamaTeam1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_bold"
                android:paddingLeft="0dp"
                android:paddingTop="5dp"
                android:text="-Fadhel januar S"
                android:textColor="#ffffff"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/NamaTeam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_bold"
                android:paddingLeft="0dp"
                android:paddingTop="5dp"
                android:text="-Ardian Kurniawan"
                android:textColor="#ffffff"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/NamaTeam3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_bold"
                android:paddingLeft="0dp"
                android:paddingTop="5dp"
                android:text="-Jonathan kevin "
                android:textColor="#ffffff"
                android:textSize="20dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <ImageView
                android:id="@+id/FotoProject"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="55dp"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>